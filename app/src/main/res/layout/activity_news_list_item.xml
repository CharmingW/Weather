<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="@dimen/common_s_spacing"
              android:paddingRight="@dimen/common_s_spacing"
              android:paddingLeft="@dimen/common_s_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/l_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_xs_spacing"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_item_image"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:lines="4"
            android:textSize="@dimen/s_text_size"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/news_item_description"
            android:layout_marginStart="@dimen/common_m_spacing"
            android:textColor="@color/black_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_xs_spacing">

        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/news_item_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/s_text_size"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/news_item_time"
            android:gravity="right"
            android:textColor="@color/darker_gray"
            android:layout_weight="2"/>
    </LinearLayout>

    <ImageView
        android:background="@drawable/s_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_xs_spacing"/>
</LinearLayout>