<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/darker_gray"
             android:orientation="vertical">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:srcCompat="@drawable/ic_b2"/>

    <LinearLayout
        android:background="#5f000000"
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="@dimen/common_xxl_spacing"
            android:layout_height="@dimen/common_xxl_spacing"
            android:layout_marginStart="@dimen/common_m_spacing"
            android:layout_marginTop="@dimen/common_m_spacing"
            android:layout_marginBottom="@dimen/common_m_spacing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/common_m_spacing">

            <TextView
                android:id="@+id/tips_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/l_text_size"/>

            <TextView
                android:id="@+id/tips_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lighter_gray"
                android:textSize="@dimen/s_text_size"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>